<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Docente_Fragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_notificaciones"
        android:layout_width="match_parent"
        android:layout_height="614dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"/>

    <ImageView
        android:id="@+id/nadaNuevo"
        android:layout_width="162dp"
        android:layout_height="156dp"
        android:src="@drawable/sin_notificacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429"></ImageView>

    <TextView
        android:id="@+id/tvNada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parece que estás al día"
        android:textSize="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nadaNuevo"
        app:layout_constraintVertical_bias="0.094"></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>