<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TFG" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#00000000</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor" >#00000000</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="Theme.TFG.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorPrimary">@color/pink</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="ThemeGreenButton" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/circle_background_green</item>
        <item name="backgroundTint">#44C484</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TFG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TFG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>